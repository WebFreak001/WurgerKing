{
	"compileOnSave": true,
	"include": [
		"public/ts",
		"public/ts/*.min.js",
	],
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": false,
		"checkJs": false,
		"outFile": "public/js/app.js",
		"module": "none",
		"lib": [
			"dom",
			"es6",
			"es2015.promise"
		]
	}
}